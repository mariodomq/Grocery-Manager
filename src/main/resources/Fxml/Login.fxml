<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../Styles/login.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.md.gm.Controllers.LoginController">
   <children>
      <!-- Image on the left side (Login.jpg with vegetables and beige background) -->
      <ImageView fitHeight="400.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="false">
         <image>
            <Image url="@../Images/Login.jpg" />
         </image>
      </ImageView>

      <!-- Welcome Label (Dark Green) -->
      <Label layoutX="310.0" layoutY="20.0" prefHeight="50.0" prefWidth="250.0" text="Welcome to your Grocery Manager" textFill="#245e34" wrapText="true">
         <font>
            <Font name="Arial" size="20.0" />
         </font>
         <effect>
            <DropShadow />
         </effect>
      </Label>

      <!-- Username Label (Light Green) -->
      <Label layoutX="310.0" layoutY="80.0" text="Please enter Email" textFill="#81b29a">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <!-- Username TextField -->
      <TextField fx:id="usernameField" layoutX="310.0" layoutY="100.0" prefHeight="30.0" prefWidth="250.0" promptText="Email" />

      <!-- Password Label (Light Green) -->
      <Label layoutX="310.0" layoutY="140.0" text="Please enter Password" textFill="#81b29a">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <!-- PasswordField -->
      <PasswordField fx:id="passwordField" layoutX="310.0" layoutY="160.0" prefHeight="30.0" prefWidth="250.0" promptText="Password" />

      <!-- Login Button (Green with White Text) -->
      <Button fx:id="loginButton" layoutX="310.0" layoutY="210.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="250.0" text="Login" styleClass="login-button" />

      <!-- Forgot Password Link (Dark Green, Underlined and Bold) -->
      <Hyperlink fx:id="forgotPasswordLink" layoutX="310.0" layoutY="250.0" text="Forgot your password?" underline="true" textFill="#245e34">
         <font>
            <Font size="12.0" />
         </font>
      </Hyperlink>

      <!-- Join Now Label and Link (Dark and Light Green) -->
      <Label layoutX="310.0" layoutY="280.0" text="Don't have an account?" textFill="#81b29a">
         <font>
            <Font size="12.0" />
         </font>
      </Label>
      <Hyperlink fx:id="joinNowLink" layoutX="445.0" layoutY="280.0" text="Join now" underline="true" textFill="#245e34">
         <font>
            <Font size="12.0" />
         </font>
      </Hyperlink>
   </children>
</AnchorPane>


